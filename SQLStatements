DROP DATABASE myforestDB;
CREATE DATABASE myforestDB;
USE myforestDB; 

CREATE TABLE `area` (
  `id` int(11) PRIMARY KEY AUTO_INCREMENT,
  `description` varchar(100) DEFAULT NULL);

INSERT INTO `area` (`id`, `description`) VALUES
