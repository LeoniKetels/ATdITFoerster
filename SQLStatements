(2, 'A2'),
(3, 'A3'),
(4, 'B1'),
(5, 'B2'),
(6, 'B3'),
(7, 'C1'),
(8, 'C2'),
(9, 'C3');



CREATE TABLE `problem` (
  `id` int(11) PRIMARY KEY AUTO_INCREMENT,
  `description` varchar(100) DEFAULT NULL,
  `status_id` int(11) DEFAULT NULL,
  `area_id` int(11) DEFAULT NULL,
  `tree` varchar(50) DEFAULT NULL
);

